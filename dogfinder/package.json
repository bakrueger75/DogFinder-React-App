{
  "name": "dogfinder",
  "version": "0.1.0",
  "private": true,
  "homepage": "http://bakrueger75.github.io/dogfinder",
  "dependencies": {
    "bootstrap": "^4.1.3",
    "jquery": "^1.9.1",
    "popper.js": "1.14.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "^1.1.0",
    "react-scroll": "^1.7.10",
    "react-router": "latest",
    "react-router-dom": "latest"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "concat-glob-cli": "^0.1.0",
    "gh-pages": "^2.0.1",
    "node-sass": "latest",
    "npm-run-all": "^4.1.3",
    "onchange": "latest"
  },
  "scripts": {
    "prestart": "npm-run-all scss:compile css:concat css:concatDist",
    "start": "npm-run-all --parallel react:start scss:watch css:watch",
    "react:start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "scss:watch": "node-sass --source-comments -rw ./src/css/scss/ -o ./src/css/compiled",
    "scss:compile": "node-sass --source-comments -r ./src/css/scss/ -o ./src/css/compiled",
    "css:concat": "concat-glob-cli -f ./src/css/compiled/*.css -o ./src/css/dogfinder.css",
    "css:concatDist": "concat -o ./src/css/styles.css ./node_modules/bootstrap/dist/css/bootstrap.min.css ./src/css/dogfinder.css",
    "css:watch": "onchange \"./src/css/compiled/*.css\" -- npm-run-all css:concat css:concatDist",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  }
}
